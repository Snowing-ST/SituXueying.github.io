```python
def main():
    os.chdir("")
    print('è¯·è¾“å…¥æ‚¨æƒ³çˆ¬å–å†…å®¹çš„å…³é”®å­—ï¼š')
    compRawStr = input('å…³é”®å­—1 å…³é”®å­—2ï¼š \n')     #é”®ç›˜è¯»å…¥ å¤šä¸ªå…³é”®å­—åˆ™ç”¨ç©ºæ ¼éš”å¼€
    PageN = input('èµ·å§‹é¡µ,é¡µæ•°ï¼š \n')     #å¦‚é”®ç›˜è¯»å…¥ 1,5 1,5
    print('æ­£åœ¨çˆ¬å–â€œ' + compRawStr.capitalize()+ 'â€æœ‰å…³æ–°é—»!')
    comp = compRawStr.split()
    pn = PageN.split()
    para = []
    if (len(comp)==len(pn)) &amp; (len(comp)&gt;1):#å¤šä¸ªå…³é”®è¯
        l = len(comp) #å¤šè¿›ç¨‹çˆ¬å–ä¸åŒæœç´¢è¯æ–°é—»
        for i in range(l):
            para.append([comp[i]]+[int(c) for c in pn[i].split(",")])   
            #[['ä¸­ç¾è´¸æ˜“æˆ˜', 1, 5], ['å¤–äº¤éƒ¨', 1, 5]]
#        crawl(comp[0]) #çˆ¬å–æˆåŠŸä¼šè¾“å‡ºtitle
        #crawl(['ä¸­ç¾è´¸æ˜“æˆ˜', 1, 5])
    if (len(comp)==len(pn)) &amp; (len(comp)==1):#ä¸€ä¸ªå…³é”®è¯ï¼Œé¡µé¢å¹¶è¡Œçˆ¬å–
        l=3
        sp,n = [int(i) for i in pn[0].split(",")]
        sep = int(round(n/l,0))
        para = [[comp[0],sp,sep],[comp[0],sp+sep,sep],[comp[0],sp+2*sep,n-sp-2*sep]]
    p=Pool(l)
    p.map(crawl,para)       #çˆ¬å–4é¡µå†…å®¹
    p.close()
    p.join()
    print("çˆ¬å–æˆåŠŸï¼Œè¯·æ‰“å¼€"+os.getcwd()+"æŸ¥çœ‹è¯¦æƒ…")

if __name__=='__main__':
    main()
